<div class="signup">
  <h2>Sign up</h2>

  <div class="signup_form">

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
      <%= render "users/shared/error_messages", resource: resource %>
      <table>
        <tr>
          <th><%= f.label :email %></th>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>

        <tr>
          <th><%= f.label :username %></th>
          <td><%= f.text_field :username %></td>
        </tr>

        <tr>
          <th><%= f.label :image %></th>
          <td><%= f.file_field :image %></td>
        </tr>

        <tr>
          <th><%= f.label :profile %></th>
          <td><%= f.text_area :profile %></td>
        </tr>

        <tr>
          <th>
            <%= f.label :password %>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
          </th>
          <td><%= f.password_field :password, autocomplete: "new-password" %></td>
        <tr>

        <tr>
          <th><%= f.label :password_confirmation %></th>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
      </table>

      <div class="actions">
        <%= f.submit "Sign up" %>
      </div>
    <% end %>

    <%= render "users/shared/links" %>
  </div>
</div>
