<div class="post_new">
    <div class="post_form">
        <%= form_with model:@post do |f| %>
            <table> 
                <tr>
                    <th>
                        <%= f.label :"場所の名前" %>
                    </th>
                    <td>
                        <%= f.text_field :name,size: "40x20" %>
                    </td>
                </tr>
                <tr>
                    <th>
                        <%= f.label :"住所または地名" %>
                    <td>
                        <%= f.text_field :address,size: "40x20" %>
                    </td>
                </tr>
                <tr>
                    <th>
                        <%= f.label :"都道府県 （〜県まで記入）" %>
                    </th>
                    <td>
                        <%= f.text_field :place,size: "40x20" %>   
                    </td>
                </tr>
                <tr>
                    <th>
                        <%= f.label :"写真" %> 
                    </th>
                    <td>
                        <%= f.file_field :image %> 
                    </td>
                </tr>
                <tr>
                    <th>
                        <%= f.label :"スポットのURL" %>
                    </th>
                    <td>
                        <%= f.text_field :rink ,size: "40x20"%>
                    </td>
                </tr>
                <tr>
                    <th>
                    <%= f.label :"ここに関して一言！" %>
                    </th>
                    <td>
                        <%= f.text_area :content ,size: "40x10"%>
                    </td>
                </tr>
            </table>
        
            <p class="new_submit"><%= f.submit "投稿する" %></p>
        <% end %>
    </div>
</div>
