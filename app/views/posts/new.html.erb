<div class="post_new">
    <div class="post_form">
        <%= form_with model:@post do |f| %>
            <table> 
                <tr>
                    <th>
                        <%= f.label :"場所の名前" %>
                    </th>
                    <td>
                        <%= f.text_field :name,size: "40x20" %>
                    </td>
                </tr>
                <tr>
                    <th>
                        <%= f.label :"住所または地名" %>
                    <td>
                        <%= f.text_field :address,size: "40x20" %>
                    </td>
                </tr>
                <tr>
                    <th>
                        <%= f.label :"都道府県 （〜県まで記入）" %>
                    </th>
                    <td>
                        <%= f.text_field :place,size: "40x20" %>   
                    </td>
                </tr>
                <tr>
                    <th>
                        <%= f.label :"写真" %> 
                    </th>
                    <td>
                        <%= f.file_field :image %> 
                    </td>
                </tr>
                <tr>
                    <th>
                        <%= f.label :"スポットの種類" %> 
                    </th>
                    <td>
                        <label><%= f.radio_button :color, "https://maps.google.com/mapfiles/ms/micons/green-dot.png" %>建物・テーマパーク</label>
                        <label><%= f.radio_button :color, "https://maps.google.com/mapfiles/ms/micons/green-dot.png" %>絶景</label>
                        <label><%= f.radio_button :color, "https://maps.google.com/mapfiles/ms/micons/green-dot.png" %>飲食</label>
                        <label><%= f.radio_button :color, "https://maps.google.com/mapfiles/ms/micons/green-dot.png" %>心霊</label>
                        <%# <%= f.select :color, {'建物・テーマパーク': 'https://maps.google.com/mapfiles/ms/micons/green-dot.png'}, {'絶景': 'https://maps.google.com/mapfiles/ms/micons/red-dot.png'}, {'飲食': 'https://maps.google.com/mapfiles/ms/micons/yellow-dot.png'}, {'心霊': 'https://maps.google.com/mapfiles/ms/micons/purple-dot.png'} %>  
                    </td>
                </tr>
                <tr>
                    <th>
                        <%= f.label :"スポットのURL" %>
                    </th>
                    <td>
                        <%= f.text_field :rink ,size: "40x20"%>
                    </td>
                </tr>
                <tr>
                    <th>
                    <%= f.label :"ここに関して一言！" %>
                    </th>
                    <td>
                        <%= f.text_area :content ,size: "40x10"%>
                    </td>
                </tr>
            </table>
        
            <p class="new_submit"><%= f.submit "投稿する" %></p>
        <% end %>
    </div>
</div>
